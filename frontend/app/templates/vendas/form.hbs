<div class="panel panel-info">
    <div class="panel-heading">
        <h2>
            {{#link-to 'vendas' active=false}}<i class="fa fa-angle-left"></i>{{/link-to}}
            <i class="fa fa-building-o"></i>
            {{#if model.isNew}}
                Nova Venda
            {{else}}
                Editar Venda
            {{/if}}
        </h2>
    </div>
    <div class="panel-body">
		{{#bs-form model=model action="submit" as |form|}}
            <div class="row">
				<div class="col-sm-12">
					{{form.element label="Data de Compra" placeholder="Data de Compra" property="dataCompra"}}
				</div>
            </div>
            <div class="row">
				<div class="col-sm-6">
					{{form.element label="Valor" placeholder="Valor" property="valor"}}
				</div>
				<div class="col-sm-6">
					{{form.element type="number" label="Comissao" placeholder="Comissao" property="comissao"}}
				</div>
            </div>
            <div class="row">
				<div class="col-sm-12">
                    {{form.element label="Cliente" placeholder="Cliente" property="cliente.id"}}
                </div>
            </div>
            <div class="row">
				<div class="col-sm-12">
                    {{form.element label="Empresa" placeholder="Empresa" property="empresa.id"}}
                </div>
            </div>
        {{/bs-form}}
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-sm-12 text-right">
                <button class="btn btn-success" {{action "submit"}}>Salvar</button>
            </div>
        </div>
    </div>
</div>